# ============================================================================
# SECRETS TEMPLATE - Copy to secrets.yaml and DO NOT commit
# ============================================================================
# Instructions:
# 1. Copy this file to secrets.yaml: cp secrets.yaml.example secrets.yaml
# 2. Fill in your actual credentials (secrets.yaml is gitignored)
# 3. For CI/CD, add these as GitHub Secrets in repository settings
# ============================================================================

# ----------------------------------------------------------------------------
# TUYA (Official Integration)
# ----------------------------------------------------------------------------
# Get credentials from: https://iot.tuya.com/
# Navigate to: Cloud → Development → Create Cloud Project
tuya_client_id: YOUR_TUYA_CLIENT_ID
tuya_client_secret: YOUR_TUYA_CLIENT_SECRET
tuya_user_id: YOUR_TUYA_USER_ID
tuya_country_code: 48  # Poland country code

# ----------------------------------------------------------------------------
# XIAOMI MI HOME (Official Integration)
# ----------------------------------------------------------------------------
# Use your Xiaomi/Mi Home account credentials
xiaomi_username: YOUR_XIAOMI_EMAIL
xiaomi_password: YOUR_XIAOMI_PASSWORD

# ----------------------------------------------------------------------------
# AQARA (Matter/Hub Integration)
# ----------------------------------------------------------------------------
# Aqara devices can connect via:
# 1. Matter (preferred) - no cloud credentials needed
# 2. Aqara Hub - configure via UI with hub IP
# If using Aqara Cloud API:
aqara_app_id: YOUR_AQARA_APP_ID
aqara_app_key: YOUR_AQARA_APP_KEY
aqara_key_id: YOUR_AQARA_KEY_ID

# ----------------------------------------------------------------------------
# DAIKIN ONECTA (Official/Community)
# ----------------------------------------------------------------------------
# Register at: https://developer.cloud.daikineurope.com/
# Note: Some models may require community integration
daikin_onecta_client_id: YOUR_DAIKIN_CLIENT_ID
daikin_onecta_client_secret: YOUR_DAIKIN_CLIENT_SECRET

# ----------------------------------------------------------------------------
# SOLARMAN (Official/Community Hybrid)
# ----------------------------------------------------------------------------
# Get credentials from Solarman app or platform
# Some inverters use official integration, others need community version
solarman_app_id: YOUR_SOLARMAN_APP_ID
solarman_app_secret: YOUR_SOLARMAN_APP_SECRET
solarman_username: YOUR_SOLARMAN_USERNAME
solarman_password: YOUR_SOLARMAN_PASSWORD

# ----------------------------------------------------------------------------
# MQTT BROKER
# ----------------------------------------------------------------------------
# Configure your MQTT broker details
# Can be Mosquitto, HiveMQ, CloudMQTT, etc.
mqtt_broker: mqtt.example.com  # or IP: 192.168.1.100
mqtt_port: 1883
mqtt_username: YOUR_MQTT_USERNAME
mqtt_password: YOUR_MQTT_PASSWORD
mqtt_client_id: homeassistant

# ----------------------------------------------------------------------------
# MÓJ TAURON (Community Integration - Requires Custom Component)
# ----------------------------------------------------------------------------
# Polish energy provider integration
# Install from: https://github.com/PiotrMachowski/Home-Assistant-custom-components-Tauron-AMIplus
tauron_username: YOUR_TAURON_USERNAME
tauron_password: YOUR_TAURON_PASSWORD

# ----------------------------------------------------------------------------
# ELICZNIK (Community Integration - Requires Custom Component)
# ----------------------------------------------------------------------------
# Polish smart meter integration
# Install from: https://github.com/biplab-t-coding/elicznik
elicznik_username: YOUR_ELICZNIK_USERNAME
elicznik_password: YOUR_ELICZNIK_PASSWORD

# ----------------------------------------------------------------------------
# BLUESECURE (Community Integration - Requires Custom Component)
# ----------------------------------------------------------------------------
# Possibly for Eura/BlueSecure security systems
# Check HACS or GitHub for community integration
bluesecure_host: YOUR_BLUESECURE_IP
bluesecure_username: YOUR_BLUESECURE_USERNAME
bluesecure_password: YOUR_BLUESECURE_PASSWORD

# ----------------------------------------------------------------------------
# EMODULE / TECH CONTROLLERS (Community Integration)
# ----------------------------------------------------------------------------
# For TECH heating controllers (eModule)
# Install from: https://github.com/mariusz-ostoja-swierczynski/tech-controllers
tech_user_id: YOUR_TECH_USER_ID
tech_token: YOUR_TECH_API_TOKEN

# ----------------------------------------------------------------------------
# GENERAL / OTHER SERVICES
# ----------------------------------------------------------------------------
# Add any additional API keys or credentials here
home_latitude: 52.2297  # Example: Warsaw
home_longitude: 21.0122
home_elevation: 100

# Notification services
telegram_bot_token: YOUR_TELEGRAM_BOT_TOKEN
telegram_chat_id: YOUR_TELEGRAM_CHAT_ID

# Weather services (if not using built-in)
openweathermap_api_key: YOUR_OPENWEATHERMAP_API_KEY

# HTTP basic auth (if exposing HA externally)
http_password: YOUR_SECURE_PASSWORD
