          grid-auto-rows: auto
          gap: 8px
        # (opcjonalnie responsywno≈õƒá)
        mediaquery:
          "(max-width: 1200px)":
            grid-template-columns: 1fr
          "(min-width: 1201px) and (max-width: 1700px)":
            grid-template-columns: repeat(2, minmax(0, 1fr))
        cards:
          # Kolumna 1
          - type: vertical-stack
